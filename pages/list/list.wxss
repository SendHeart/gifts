@import "../../lib/style/font.wxss";

.Hui-iconfont {
 font-family: "Hui-iconfont";
 font-size:30rpx;
}
.iconv-uparrow:after {
  content:'\e6d6';
}

.iconv-downarrow:after {
  content:'\e6d5';
}

page {
  background-color:#f2f2f2;
  overflow-x: hidden;
  width: 100%;
  height: 100%;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.startBar {
  height: 75rpx;
  background: #333;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 5rpx;
  border-bottom: 0px solid #f2f2f2;
  z-index: 99;
}
.top-title {
  height: 75rpx;
  background: #333;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 5rpx;
  border-bottom: 0px solid #f2f2f2;
  z-index: 99;
}
.top-title-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  color: #fff;
  text-align: center;
  line-height: 75rpx;
  font-size: 48rpx;
  padding: 10rpx;
}
.top-title-item .title-image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 1rpx;
  margin-top: 0rpx;
  margin-left: 20rpx;
}
.container {
    background-color: #F2f2f2;
    width: 100%;
    height: 100%;
    overflow: hidden;
    margin: 0;
    padding: 0;
}

.banner {
	width: 100%;
	/*height: 70rpx;*/
	padding-top: 0rpx;
	/*margin-left: 15rpx;*/
}

.banner image {
	width: 100%;
	height: 0rpx;
}

.banner .swiper_box {
    width: 100%;
}

/*导航 nav*/
.top-bar {
  height: 76rpx;
  background: white; 
  white-space: nowrap;
  position: fixed;
  top:0;
  z-index:99;
}
.top-bar-item {
  display:inline-block;
  width: 120rpx;
  color: #444;
  text-align: center;
  line-height: 70rpx;
  font-size: 32rpx;
}
.top-bar-active {
  color: #444;
  font-weight: bold;
  border-bottom: 6rpx solid #E34C55;
}

/*辅助导航 nav2*/
.top-bar2 {
  height: 70rpx;
  background: #FFF; 
  width:100%;
  position: fixed;
  margin-top: 74rpx;
  top:0;
  border-top: 1px solid #F2f2f2;
  border-bottom: 1px solid #F2f2f2;
  z-index:99;
}
.top-bar-item2 {
  display:inline-block;
  width: 250rpx;
  color: #999;
  text-align: center;
  line-height: 70rpx;
  font-size: 28rpx;
}
.top-bar-active2 {
  color: #444;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
}

.venues_box {
  display:block;
  width: 98%;
  padding-bottom:100rpx;
  margin-left:2%;
  margin-top: 124rpx;
  overflow-x: hidden;
}

.venues_item {
  display: inline-block;
  width: 47%;
  margin: 0 1% 15rpx 1%;
  background: #ffffff;
  border-radius: 10rpx;
  text-indent: 20rpx;
  padding-bottom: 20rpx;
}

.venues_item .mainpic {
  display: block;
  width: 310rpx;
  height: 310rpx;
  margin: 20rpx auto;
}

.venues_item .goods_name {
  display: block;
  color: #444;
  font-size:28rpx;
}

.venues_item .goods_tag {
  color: #999;
  font-size: 20rpx;
  padding: 2rpx 6rpx;
  border: 1px solid #f2f2f2;
  border-radius: 6rpx;
  text-align: center;
}
.venues_item .goods_tag image{
  width: 10%;
  height: 30rpx;
}
.venues_item .goods_prom {
  display: block;
  color: #999;
  font-size:28rpx;
  white-space: nowrap;
  overflow-x: hidden;
}
.price-now {
  color: #e34c55;
  font-size:28rpx;
  font-weight: bold;
}
.price-now::first-letter {
  font-size: 20rpx;
}
.goods_bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 0 20rpx;
  text-indent: 0;
}
.search {
	width: 100%;
	height: 80rpx;
  display: flex;
	flex-direction: row;
	justify-content: center;/*子项横轴上居中对齐*/
	align-items: center;/*子项纵轴上居中对齐*/
  padding: 5rpx;
}

.search .wx-input {
	width: 70%;
	height: 30rpx;
	border: 1px solid #bfbfbf;
	border-radius: 120rpx;
  padding-left: 5rpx;
	/*margin: 30rpx 0 0 38rpx;*/
}

.search image {
	width: 5%;
	height: 40rpx;
	border: 0px solid #bfbfbf;
  margin-left:10rpx;
}
