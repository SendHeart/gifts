<!--index.wxml-->
<import src="../common/hall_title.wxml" />
<import src="../common/nav.wxml" />
<import src="../common/nav2.wxml" />
<template is="hall_title" data="{{title_name,title_logo,navgationHeight,startBarHeight}}" />
<view class="banner">
  <template is="nav" data="{{navList, activeIndex,toView,navgationHeight,startBarHeight}}" />
</view>

<view class="banner">
  <template is="nav2" data="{{navList2, activeIndex2, updown,navgationHeight,startBarHeight}}" />
</view>

<view class="search" style='height:30rpx;'>
  <!-- 
		<input value="{{keyword}}" class="wx-input" placeholder="寻找..."  bindinput='search_goodsnameTapTag'/>
    <image bindtap='searchTapTag' src="../../images/search-btn.png"></image>
  -->
</view>

<scroll-view scroll-y class="container" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="v_{{toView}}" scroll-top="{{scrollTop}}" style='margin-top:{{navgationHeight+startBarHeight+55}}px;'>
  <view class="venues_box">
    <view class="venues_list">
      <block wx:for="{{venuesItems}}" wx:key="">
        <view class="venues_item">
          <navigator url="../details/details?id={{item.id}}&image={{item.image}}&info={{item.act_info}}&name={{item.name}}&gov_price={{item.gov_price}}&goods_price={{item.sell_price}}&sale={{item.sale}}" hover-class="none">
            <image class="mainpic" src="{{item.image}}"></image>
            <text class="goods_name">{{item.short_name}}</text>
          </navigator>
          <view class="goods_prom">{{item.act_info?item.act_info:'高端大气'}}</view>
          <view class="goods_bottom">
            <view class="goods_tag">
              <!--<image src="../../images/u48.png"></image>-->
              <text space="ensp">{{item.goods_tag}} </text>
            </view>
            <view class="price-now">￥{{item.sell_price}}</view>

          </view>
        </view>
      </block>
    </view>
    <button wx:if="{{page<all_rows}}" type="default" size="default" bindtap="getMoreGoodsTapTag" style="margin-top:10px; width:200rpx;"> 更多</button>
    <loading hidden="{{loadingHidden}}">
      加载中...
    </loading>
  </view>



</scroll-view>