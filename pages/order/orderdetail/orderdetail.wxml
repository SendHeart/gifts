 <view class="banner">
  <text wx:if="{{send_rcv=='send' && gift_status==2 && item.status!=3}}">对方已接受</text>
  <text wx:if="{{send_rcv=='send' && item.status==2 && gift_status==1}}">对方未接受</text>
  <text wx:if="{{send_rcv=='send' && gift_status==0 }}">未送出</text>
  <text wx:if="{{send_rcv=='receive' && gift_status==2 && item.status!=3}}">已接受</text>
  <text wx:if="{{gift_status==2 && item.status==3}}">已发货，礼物正在路上</text>
</view>
<view class="order-item" wx:for="{{orders}}" wx:key="">
	<!-- 厂家logo缩略图 -->
  <view class="order-detail-text">
   <text style="width:20%;margin-left:20rpx;">礼物号:</text>
   <text>{{order_no}}</text>
  </view>
  <view class="shop-text">
			<image class="logo-image" src="{{item.logo}}" mode="aspectFill"/>
      <text class="shop-text" style="font-size:12px;">{{item.shop_name}}</text> 
  </view>
  
	<view wx:for="{{item['order_sku']}}" wx:for-item="mapping" wx:key="" class="carts-item" bindtap="showGoods" data-sku-id="{{mapping.id}}" data-goods-id="{{mapping.goods_id}}" data-goods-name="{{mapping.goods_name}}">
    <view>
			<!-- 缩略图 -->
			<image class="carts-image" src="{{mapping.sku_image}}" mode="aspectFill"/>
		</view>
		<view class="carts-text">
			<!-- 商品标题 -->
			<text class="carts-title">{{mapping.goods_name}}</text>
      <view wx:for="{{mapping['sku_value']}}" wx:for-item="sku_value" wx:key="">
      	<text>{{sku_value?sku_value['name']+':':''}}</text>
        <text wx:if="{{sku_value['type']==1}}">{{sku_value?sku_value['value']:''}}</text>
        <image wx:if="{{sku_value['type']==2}}" src="{{sku_value['value']}}" style="width:10%;height:30rpx;margin-left:2px;"></image>
         <text wx:if="{{sku_value['type']==2}}">{{sku_value?sku_value['note']:''}}</text>
        
      </view>
			<view class="carts-subtitle">
				<text>x{{mapping.sku_num}}</text>
			</view>
		</view>
	</view>
	<view class="order-footer">
    <view style="width:80%">
		<text>金额:￥{{item.order_price}}元</text>
		<text bindtap="pay" data-object-id="{{item.order_no}}" data-total-fee="{{item.amount}}" class="{{(item.status==1 && item.gift_status==0 && giftflag==0) ? '': 'hidden'}}" style="color:red" >去支付</text>
		<text style="width:20%;" bindtap="receive" data-object-id="{{item.id}}" class="{{(item.status==3 && item.gift_status==2 && giftflag==1) ? '': 'hidden'}}">确认收货</text>
    </view>
	</view>
	<view class="order-footer">
  <!-- 
		<text>收货地址</text>
		<text>{{item.address}}</text>
   
    <text>送给:</text>
		<image src="{{item.rcv_headimg}}"></image>
    <text>{{item.rcv_nickname}}</text>
     -->
	</view>
</view>
<view class="order-detail">
  <view class="order-detail-text">
    <text style="width:20%">共:{{sku_num}}件</text>
   <!-- <text>合计金额:￥{{orderprice}}元</text> -->
  </view>
  <view class="order-detail-text">
   <text style="width:20%">送出人:</text>
   <image src="{{from_headimg}}"></image>
   <text>{{from_nickname}}</text>
  </view>
  <view class="order-detail-text">
   <text style="width:20%">送出时间:</text>
   <text>{{sendtime?sendtime:''}}</text>
  </view>
  <view class="order-detail-text">
   <text style="width:20%">接受时间:</text>
   <text style="width:70%;">{{rcvtime?rcvtime:'未接受'}}{{gift_status=='1'?'(3日礼物未被接收，您可以转送其他朋友或申请退款)':''}}</text>
  </view>
</view>
<view class="delivery-detail">
  <view class="delivery-detail-text">
   <text style="width:20%">收货人:</text>
   <text>{{fullname?fullname:''}}{{tel?tel:''}}</text>
   </view>
   <view class="delivery-detail-text"> 
   <text style="width:20%">收货地址:</text>
   <text>{{orderaddress?orderaddress:''}}</text>
  </view>
  <view class="delivery-detail-text">
    <text style="width:20%">物流公司:</text>
    <text>{{deliveryname?deliveryname:''}}</text>
  </view>
  <view class="delivery-detail-text">
   <text style="width:20%">运单号:</text>
   <text>{{deliverycode?deliverycode:''}}</text>
  </view>
  <view class="delivery-detail-text">
   <text style="width:20%">当前状态:</text>
   <text style="width:60%">{{deliverystepinfo?deliverystepinfo:''}}</text>
   <!--
   <text wx:if="{{deliverycode}}" bindtap="expressTapTag" style="width:20%;color:gray;text-align:center;border:1px solid; border-radius: 5px">物流详情</text>
   -->
  </view>
</view>
<view class="delivery-detail-info">
<block wx:for="{{delivery_status}}" wx:for-item="itme" wx:key="">
 <view class="timeline-date">
    <image style="width:5%;height:40rpx;" src='../../../images/icon24.png' />
</view>
<view class="delivery-detail-info-text">
  <view class="timeline-date">
    <text style="width:10%;margin-right:20rpx;">|</text> 
    <text style="width:80%;overflow:hidden;position:relative">{{itme.AcceptStation}}</text> 
  </view>
  <view class="timeline-date">
    <text style="width:10%;margin-right:20rpx;">|</text>    
    <text style="width:80%">{{itme.operator}}</text>
  </view>
  <view class="timeline-date">
    <text style="width:10%;margin-right:20rpx;">|</text>   
    <text style="width:80%">{{itme.AcceptTime}}</text>
  </view>       
</view>  
</block>
</view>
<view class="footer">
    <view class="opt-buttons">
        <view class="button-group" bindtap="expressTapTag">
            <image src="../../../images/wuliu.png" class="button-image" />
            <text class="button-text">物流详情</text>
        </view>
        <view class="button-group" bindtap="">
            <contact-button class="contact-button" size="22" /> 
            <text class="button-text">联系客服</text>
        </view>
    </view>
     
</view>
