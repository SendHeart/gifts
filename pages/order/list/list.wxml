<view>
  <view class="order-summary">
    <view class="order-title">
      <text>{{card_register_info['card_register_title']}}</text>
    </view>
    <view class="order-dueday" style="font-size:28rpx;">
      <text>时间：</text>
      <text space="ensp">{{card_register_info['register_start_date']}} {{card_register_info['register_start_time']}}</text>
      <text space="ensp">~~{{card_register_info['register_end_date']}} {{card_register_info['register_end_time']}}</text>
    </view>
    <view class="order-statistic" style="font-size:28rpx;">
      <text>参与人数：</text>
      <text space="ensp">{{all_rows}}</text>
      <text space="ensp">/{{card_register_info['card_register_lim']}}</text>
    </view>
  </view>
	<view style="margin-top:150rpx;"  >
    <view  wx:for="{{orders}}" wx:for-item="mapping" wx:key="{{mapping.id}}" class="order-list" data-order-id="{{mapping.order_id}}" data-inter-id="{{mapping.id}}">
      <view style="width:20%">
		    <image class="order-image" src="{{mapping.from_headimg}}" mode="aspectFill"/>
		  </view>
      <view style="width:50%;font-size:28rpx;">微信昵称:{{mapping.from_nickname}}</view>
      <view style="width:30%;font-size:28rpx;">{{mapping.register_time}}</view>
    </view>
	</view>
</view>
<view class="sentbtn" hidden="{{hiddenmore}}">
  <button bindtap="getMoreOrdersTapTag">加载更多</button>
</view>