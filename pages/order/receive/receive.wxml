<view wx:if="{{is_buymyself==0}}" class="subject" style=''>
  <text class='toptitle' wx:if='{{receive_status==0}}'>恭喜，您收到一份礼物</text>
  <text class='toptitle' wx:if='{{receive_status==1}}' style='color:#999;'>礼物已领取</text>
  <text wx:if='{{receive_status==0}}'>点击拆开，收取礼物</text>
  <text wx:if='{{receive_status==1}}'>点击回赠，也给Ta送一个礼物吧</text>
</view>

<view  wx:if="{{is_buymyself==0}}" class="order-item">
  <view class="order-item-banner">
    <view>
      <image src="../../../images/gift.gif" style='width:378rpx;height:202rpx;' mode='aspectFill'></image>
    </view>
    <view class="userinfo">
      <image class="userinfo-avatar" src="{{headimg}}" background-size="cover" />
      <text class="userinfo-nickname">{{nickname}}</text>
    </view>
    <view class="order_note">
      <!--<text>{{note_title}}</text> -->
      <text space="ensp">{{note}}</text>
    </view>
    <view wx:for="{{orderskus}}" wx:key="" class="gifts-item">
      <view bindtap="showGoods" data-sku-id="{{item.sku_id}}" data-goods-id="{{item.goods_id}}" data-goods-name="{{item.goods_name}}">
        <image class="gifts-image" src="{{item.sku_image}}" mode="aspectFill"> </image>
      </view>
      <text class="carts-title">{{item.goods_name}} x{{item.sku_num}}</text>
    </view>
   
    <view wx:if="{{receive_status<=1}}" class="sentbtn">
    <form bindsubmit="formSubmit"  data-name='receivegift' report-submit="true"  hidden='{{(receive_status==1 || overtime_status==1)?true:false}}' >
      <button class="button" style="width:200rpx;" formType="submit" >拆开</button> <!-- bindtap="receiveTapTag" -->
    </form>
    <form bindsubmit="formSubmit"  data-name='refresh' report-submit="true"  hidden='{{overtime_status==0?true:false}}' >  
      <button formType="submit"  style="width:200rpx;">请刷新重试</button> <!-- bindtap="refresh"  data-isreload="1" -->
    </form>
      <view style="width:100%; display: flex;flex-direction: column;text-align:center;" hidden='{{receive_status==0}}'>
        <text  hidden='{{(receive_status==1 || overtime_status==0)?true:false}}' style='margin-top:10rpx;'>填写收货地址，礼物会很快奔向您了</text>
        <view bindtap='returnTapTag' style='margin-top:10rpx;'>
          <text hidden='{{(receive_status==1 || overtime_status==1)?true:false}}' style='color:#E34C55;font-size:28rpx;'>暂不接受，看看其他内容</text>
        </view>
      </view>
    <form bindsubmit="formSubmit"  data-name='resendgift' report-submit="true"  hidden='{{(receive_status==0 || overtime_status==1)?true:false}}' >  
      <button class="button" formType="submit"  style="width:200rpx;">回赠</button> <!-- bindtap="returnTapTag" -->
    </form>
      <view style="width:100%; display:flex;flex-direction:column;text-align:center;margin-top:15rpx;" wx:if='{{receive_status==1 && overtime_status==0}}'>
        <text>礼尚往来，回赠一份礼物让你们的联系更进一步</text>
      </view>
    </view>
  </view>
</view>