page {
	display: flex;
	flex-direction: column;
}
 
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.startBar {
  height: 75rpx;
  background: #333;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 5rpx;
  border-bottom: 0px solid #f2f2f2;
  z-index: 99;
}
.top-title {
  height: 75rpx;
  background: #333;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 5rpx;
  border-bottom: 0px solid #f2f2f2;
  z-index: 99;
}
.top-title-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  color: #fff;
  text-align: center;
  line-height: 75rpx;
  font-size: 48rpx;
  padding: 10rpx;
}
.top-title-item .title-image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 1rpx;
  margin-top: 0rpx;
  margin-left: 20rpx;
}
.desc {
	line-height: 40px;
	color: #333;
	text-align: center;
	display: block;
	padding: 0 20px;
  font-size: 28rpx;
}

image {
	width: 70%; 
	margin: 0 auto;
}
.order-item-banner {
  width: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-content: left;
  padding: 40rpx;
}

.order-item {
  width: 85%;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-content: center;
  background: white;
  margin: 20rpx auto;
  border-radius: 20rpx;
}

.gifts-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  /*width属性解决标题文字太短而缩略图偏移*/
  width: 100%;
  padding: 20rpx 10rpx;
}

.gifts-image {
  margin: 20rpx;
  width: 350rpx;
  height: 250rpx;
  border: 4rpx solid #DDD;
}

.sentbtn {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: center;
  margin: 60rpx auto 20rpx auto;
  width: 100%;
  height: 140rpx;
}

.sentbtn button {
  line-height: 100rpx;
  width: 60%;
  height: 100rpx;
  /*background: linear-gradient(to bottom, #e34c55 0%,#e30715 100%);*/
  background: #e34c55;
  color: white;
  font-size: 36rpx;
  border-radius: 20rpx;
  -webkit-box-shadow: 0px 6rpx 0px rgba(219, 31, 5, 1);
  -moz-box-shadow: 0px 6rpx 0px rgba(219, 31, 5, 1);
  box-shadow: 0px 6rpx 0px rgb(179, 22, 2);
  margin:20rpx;
}

.sentbtn text {
  font-size: 24rpx;
  color: #999;
}
.savebtn {
  font-size: 28rpx;
  padding-top:1rpx;
  height: 80rpx;
  margin-top:10px;
}
.container {
  width: 100%;
  height: 100%;
}
.share-image {
  width: 100%;
  height: 1220rpx;
}
.canvasdrawer {
  position: absolute;
}