<import src="../../common/hall_title.wxml" />
<template is="hall_title" data="{{title_name,title_logo,navgationHeight,startBarHeight}}" />

<view hidden="{{!hiddenqrcode}}"  class="gifts-item">
  <text class="desc" style=''> <!-- margin-top:{{navgationHeight+startBarHeight}}px -->
	  {{act_title==''?'送礼就是送心':act_title}}
  </text>
   <image  class="gifts-image"  src="{{weburl}}/api/WXPay/getQRCode?username={{username}}&appid={{appid}}&secret={{secret}}&shop_type={{shop_type}}&qr_type={{qr_type}}&coupons_flag={{coupons_flag}}&coupons_type={{coupons_type}}&coupons_id={{coupons_id}}&coupons={{coupons_json}}&act_id={{act_id}}" mode="widthFix" />
    <view class="sentbtn">
      <button bindtap="goBack">返回</button>
    </view>
</view>
 
