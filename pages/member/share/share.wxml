<import src="../../common/hall_title.wxml" />
<template is="hall_title" data="{{title_name,title_logo,navgationHeight,startBarHeight}}" />

<view hidden="{{!hiddenqrcode}}"  class="gifts-item">
  <text class="desc" style=''> <!-- margin-top:{{navgationHeight+startBarHeight}}px -->
	  送礼就是送心
  </text>
  <image src="{{weburl}}/api/WXPay/getQRCode?username={{username}}&appid={{appid}}&secret={{secret}}" mode="widthFix" />
</view>
 
<view hidden="{{hiddenqrcode}}" class="order-item">
  <view  class="order-item-banner">
    <view class="gifts-item">
      <text class="carts-title">{{coupons_name}}</text>
      <image  class="gifts-image"  src="{{weburl}}/api/WXPay/getQRCode?username={{username}}&appid={{appid}}&secret={{secret}}&shop_type={{shop_type}}&qr_type={{qr_type}}&coupons_flag={{coupons_flag}}&coupons_id={{coupons_id}}" mode="widthFix" />
    </view>
    <view class="sentbtn">
      <button bindtap="returnTapTag">返回</button>
    </view>
  </view>
</view>
 
<view hidden="{{hiddenqrcode}}" class="container" > 
  <image src="{{shareImage}}" class="share-image" mode='aspectFill' ></image>
  <canvasdrawer painting="{{painting}}" class="canvasdrawer" bindgetImage="eventGetImage"/>
  <button class="savebtn" bindtap="eventSave" type='warn'>保存图片,分享到朋友圈</button>
</view> 