.container{
  margin-bottom: 50rpx;
  margin-top: 80rpx;
}


/* 显示与隐藏 */
.show {
	display: block;
}

.hidden {
	display: none;
}

.msg-list {
 	display: flex;
	flex-direction: column;
	width:100%;
	border-bottom: 1px solid #f2f2f2;
	padding: 0;
  text-align: left;
  align-items: left;
  background-color: #fff;

}
.msg-item {
 	display: flex;
	flex-direction: row;
	width:100%;
	border-bottom: 0px solid #f2f2f2;
	padding: 0;
  text-align: left;
  align-items: left;
  background-color: #fff;
}

.msg-item-content {
 	display: flex;
	flex-direction: column;
	width:100%;
	border-bottom: 0px solid #f2f2f2;
	padding: 0;
  text-align: left;
  align-items: left;
  background-color: #fff;
}
 
.msg-content-text{
  margin-left:20rpx;
  margin-right:20rpx;
  font-size:30rpx;
  font-weight: bold;
  overflow:hidden;  
  text-overflow:ellipsis;  
  white-space:wrap; 
  color: #444;
}
.msg-content-text2{
  margin-left:20rpx;
  margin-right:20rpx;
  font-size:28rpx;
  overflow:hidden;  
  text-overflow:ellipsis;  
  white-space:wrap; 
  color: #444;
  padding: 20rpx;
}
.msg-content-image {
	width:100rpx;
  height:100rpx;
	padding: 10rpx 0;
  margin-left:15rpx;
  text-align: center;
  align-items: center;
  background-color: #fff;
}

.msg-content-footer {
   margin-left:20rpx;
  font-size:28rpx;
  overflow:hidden;  
  text-overflow:ellipsis;  
  white-space:wrap; 
  color: #444;
}
 
.msg-content-image image {
 /*被图片设置宽高*/ 
  width: 40px; 
  height: 40px; 
  padding-left:10px;
  padding-bottom: 10rpx;
  
}

.msg-title {
  margin-left: 10rpx;
  margin-top:10rpx;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  color: #999;
  justify-content: space-between;
}

.morebtn {
  margin:20rpx auto 200rpx auto;
  border:none;
  background: #f2f2f2;
  color: #999;
  font-size: 24rpx;
}
