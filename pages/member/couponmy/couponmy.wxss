/*@import "../../../lib/style/font.wxss";*/
.Hui-iconfont {
 font-family: "Hui-iconfont";
 font-size:30rpx;
}
.iconv-uparrow:after {
  content:'\e6d6';
}

.iconv-downarrow:after {
  content:'\e6d5';
}


page {
  background: #1d1d1d;

}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.startBar {
  height: 75rpx;
  background: #333;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 5rpx;
  border-bottom: 0px solid #f2f2f2;
  z-index: 99;
}
.top-title {
  height: 75rpx;
  background: #333;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 5rpx;
  border-bottom: 0px solid #f2f2f2;
  z-index: 99;
}
.top-title-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  color: #fff;
  text-align: center;
  line-height: 75rpx;
  font-size: 48rpx;
  padding: 10rpx;
}
.top-title-item .title-image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 1rpx;
  margin-top: 0rpx;
  margin-left: 20rpx;
}

.top-bar2 {
  height: 76rpx;
  background: #1d1d1d;
  width: 100%;
  position: fixed;
  top: 0;
  /*border-bottom: 1px solid #f2f2f2;*/
  z-index: 99;
}

.top-bar-item2 {
  display: inline-block;
  width: 235rpx;
  color: #fff;
  text-align: center;
  line-height: 70rpx;
  font-size: 32rpx;
}

.top-bar-active2 {
  color: #fff;
  font-weight: bold;
  border-bottom: 6rpx solid #e34c55;
}

.order-item-banner {
  width: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-content: left;
  margin-top: 76rpx;
}

/*user info*/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  margin-top: 20rpx;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #444;
  font-size: 32rpx;
  font-weight: bold;
}

/*每行单元格*/

.carts-item {
  display: flex;
  flex-direction: column;
  height: 260rpx;
  /*width属性解决标题文字太短而缩略图偏移*/
  width: 100%;
  padding: 10rpx;
}

.carts-image {
  margin: 20rpx;
  width: 200rpx;
  height: 160rpx;
}

/*每行单元格*/

.coupons {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  /*width属性解决标题文字太短而缩略图偏移*/
  align-content: center;
  background: #1d1d1d;
  margin: 30rpx auto;
  width: 552rpx;
  height: 260rpx;
  background-size: 100% 100%;
  padding: 55rpx 0 20rpx 0;
}

.coupon-image {
  width: 750rpx;
  height: 360rpx
}

.coupon-name {
  font-size: 32rpx;
  color: #ebdddd;
  line-height: 30rpx;
  width: 100%;
}

.coupon-content {
  font-size: 42rpx;
  color: #ebdddd;
  line-height: 2;
  width: 100%;
  
}

.coupon-dueday {
  font-size: 22rpx;
  color: #ebdddd;
  line-height: 1.5;
  width: 100%;
  
}
.coupon-footer {
  font-size: 22rpx;
  color: #ebdddd;
  line-height: 1.5;
  width: 100%;
  
}
/*更多按钮*/
.morebtn {
  font-size: 24rpx;
  background-color: #444;
}

.sentbtn text {
  font-size: 24rpx;
  color: #999;
}

/**/

.order_note {
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 20rpx auto;
}

.order_note text {
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  color: #444;
}

.order_note_end {
  margin-left: 10rpx;
  width: 100%;
  display: inline-block;
  font-size: 14px;
}

.order_note_end text {
  margin-left: 10rpx;
  font-size: 14px;
  background: white;
  color: blace;
}

.from-image {
  width: 10%;
  height: 50rpx;
  border-radius: 50%;
  margin-top: 40rpx;
}

/*logo部图片*/

.logo-image {
  width: 80rpx;
  height: 50rpx;
  border-radius: 50%;
}

/*右部描述*/

.carts-text {
  margin-left: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


.carts-title {
  font-size: 24rpx;
  color: #707070;
  line-height: 30rpx;
  width: 100%;
}


/*隐藏元素*/

.hidden {
  display: none;
}

/*顶部主题*/

.subject {
  width: 100%;
  height: 120rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-top: 20rpx;
}

.subject text {
  width: 100%;
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.subject image {
  width: 45%;
  height: 100rpx;
  margin: 10rpx;
}

.subject .toptitle {
  font-size: 35rpx;
  font-weight: bold;
  color: #fff;
}

.swiper_box {
  width: 100%;
}

.swiper_box .slide-image {
  width: 100%;
  height: 80%;
  display: inline-block;
  overflow: hidden;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
}
