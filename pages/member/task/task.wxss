page {
  background: #f2f2f2;
  overflow-x: hidden;
  width: 100%;
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.banner {
  width: 100%;
  /*margin-left: 15rpx;*/
  background-color: #f2f2f2;
  background-repeat: norepeat;
  align-content: center;
  opacity: 1;
  background-size: 100% 100%;
}

.banner image {
  width: 100%;
}

.gifts-item {
  display: flex;
  flex-direction: column;
  width: 100%;
  color: #fff;
  text-align: center;
  align-items: center;
  justify-content: center;
  line-height: 75rpx;
  font-size: 48rpx;
  padding: 10rpx;
}
.gifts-item-image {
  width:200rpx;
  height:200rpx;
}

.gifts-item-title {
  color: #444;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  line-height: 100rpx;
  padding: 10rpx;
  background: #f2f2f2;
}

.gifts-item-text {
  color: #999;
  font-size: 28rpx;
}
.wrap {
  width: 100%;
  position: relative;
  top: 0rpx;
}

/*推荐商品列表*/



.sentbtn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  align-content: center;
  margin: 60rpx auto;
  width: 100%;
}

.sentbtn button {
  line-height: 70rpx;
  width: 50%;
  height: 70rpx;
  background: #cf1010;
  color: #fff;
  font-size: 30rpx;
  border-radius: 20rpx;
  -webkit-box-shadow: 0px 6rpx 0px rgba(219, 31, 5, 1);
  -moz-box-shadow: 0px 6rpx 0px rgba(219, 31, 5, 1);
  box-shadow: 0px 6rpx 0px rgb(179, 22, 2);
  margin:20rpx auto;
  margin-bottom:30rpx;
}

.sentbtn text {
  font-size: 24rpx;
  color: #fff;
}


.wrap{
  background:#f2f2f2;
}
.container { 
  width: 100%; 
  background-color: #f2f2f2; 
  color: #fff;
}
.task-list {
  width:90%;
  height: 90%;
  flex-direction: column;
  background-color: #fff; 
  border-radius: 20rpx;
  margin:20rpx auto;
  justify-content:center; 
  text-align: left;
  align-content: left;
  align-items: left; 
}
.order-item {
  border-radius: 20rpx;
}
.order-item-title {
  text-align: center;
  align-content: center;
  padding: 20rpx;
  font-size:35rpx;
  font-weight: bold;
  color: #333;
  background: #fff;
}

.order-item-message {
  width: 90%;
  color: #444;
  line-height: 38rpx;
  overflow:hidden;  
  text-overflow:ellipsis;  
  white-space:wrap; 
  padding: 20rpx;
  font-size:30rpx;
  margin-left:20rpx;
}
