page {
  background: #f2f2f2;
  overflow-x: hidden;
  width: 100%;
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.banner {
  width: 100%;
  /*margin-left: 15rpx;*/
  background-color: #f2f2f2;
  background-repeat: norepeat;
  align-content: center;
  opacity: 1;
  background-size: 100% 100%;
}

.banner image {
  width: 100%;
}

.gifts-item {
  display: flex;
  flex-direction: column;
  width: 100%;
  color: #fff;
  text-align: center;
  align-items: center;
  justify-content: center;
  line-height: 75rpx;
  font-size: 48rpx;
  padding: 10rpx;
}
.gifts-item-image {
  width:200rpx;
  height:200rpx;
}

.gifts-item-title {
  color: #444;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  line-height: 100rpx;
  padding: 10rpx;
}

.gifts-item-text {
  color: #999;
  font-size: 28rpx;
}
.wrap {
  width: 100%;
  position: relative;
  top: 0rpx;
}

/*推荐商品列表*/



.sentbtn {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: center;
  margin: 60rpx auto 20rpx auto;
  width: 100%;
  height: 120rpx;
}

.sentbtn button {
  line-height: 100rpx;
  width: 60%;
  height: 100rpx;
  /*background: linear-gradient(to bottom, #e34c55 0%,#e30715 100%);*/
  background: #e34c55;
  color: white;
  font-size: 36rpx;
  border-radius: 20rpx;
  -webkit-box-shadow: 0px 6rpx 0px rgba(219, 31, 5, 1);
  -moz-box-shadow: 0px 6rpx 0px rgba(219, 31, 5, 1);
  box-shadow: 0px 6rpx 0px rgb(179, 22, 2);
  margin:20rpx;
}

.sentbtn text {
  font-size: 24rpx;
  color: #999;
}
.savebtn {
  font-size: 28rpx;
  padding-top:1rpx;
  height: 80rpx;
  margin-top:10px;
}