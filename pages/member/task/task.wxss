}
.layerframe {
display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 20rpx;
  width: 80%;
  margin:30% auto;
}
.red-item {
  display: flex;
  flex-direction: column;
  align-items: left;
  text-align: left;
  /*width属性解决标题文字太短而缩略图偏移*/
  
  padding: 20rpx;
}
.name-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 98%;
}
.red-name {
  font-size: 28rpx;
  color: #444;
  line-height: 38rpx;
  width: 100%;
}
.red-title {
  font-size: 28rpx;
  font-weight: bold;
}
.red-content {
  font-size: 45rpx;
  color: #999;
  line-height: 100rpx;
  width: 100%;
  margin-top:20rpx;
}
.red-value {
  font-size: 45rpx;
  color: #999;
  line-height: 60rpx;
  margin-top:20rpx;
  width: 100%;
}

.red-dueday {
  font-size: 24rpx;
  color: #999;
  line-height: 38rpx;
  width: 100%;
  text-align: right;
}
.red-footer {
  font-size: 35rpx;
  color: #ebdddd;
  line-height: 38rpx;
  width: 100%;
  margin-top:20rpx;
} 
