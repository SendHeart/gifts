/*销量与好评*/
.goods-score {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	width: 100%;
}

.goods-score text {
	display: block;
	width: 100px;
	font-size: 12px;
	color: #999;
	margin: 8px 4px;
}

/*整体列表*/
.carts-list {
	display: flex;
	flex-direction: column;
	padding: 0 40rpx;
	margin-bottom: 80rpx;
}

/*每行单元格*/
.carts-item {
	display: flex;
	flex-direction: row;
	height:150rpx;
	/*width属性解决标题文字太短而缩略图偏移*/
	width:100%;
	border-bottom: 1px solid #eee;
	padding: 30rpx 0;
}

/*左部图片*/
.carts-image {
	width:150rpx;
	height:150rpx;
}


/*右部描述*/
.carts-text {
	margin-left: 10rpx;
	width: 100%;	
  height:130rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

/*右上部分标题*/
.carts-title {
	font-size: 28rpx;
	color: #444;
	line-height: 30rpx;
}

/*右下部分价格与数量*/
.carts-subtitle {
	font-size: 25rpx;
	color:darkgray;
	padding: 0 10rpx;
	display: flex;
	flex-direction: row;
	justify-content:space-between;
}

/*价格*/
.carts-price {
	color: #f60;
	font-size:14px;
	line-height: 22px;
}

/*添加购物车按钮*/
.cart-icon {
	width: 50rpx;
}

.star-level {
	display: flex;
	flex-direction: row;
	height:150rpx;
	width:100%;
	border-bottom: 1px solid #eee;
	padding: 30rpx 0;
  text-align: center;
  align-items: center;
}


.note {
  width: 100%;
  height: 180rpx;
  margin: 10rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
}

.note textarea {
  width: 100%;
  height: 160rpx;
  margin-left: 20rpx;
  border-bottom: 1px solid #eee;
  font-size: 24rpx;
  color: #999;
}

.sendmessage {
  width:96%;
  position:relative;
  display:flex;
  flex-direction:column;
  border:0px solid #aaaaaa;
  bottom: 0;
  padding-left:5px;
  padding-bottom:10px;
  overflow: hidden;
  opacity:1;
  z-index: 999;
}

.sendmessage .upimage {
  display:flex;
  flex-direction:row;
  border:0px solid #aaaaaa;
  
}

.sendmessage .upimage image {
 /*被图片设置宽高*/ 
  width: 40px; 
  height: 40px; 
  padding-left:10px;
  padding-bottom: 10rpx;
  
}

.sendmessage .text {
  display:flex;
  flex-direction:row;
  border:0px solid #aaaaaa;
  
}

.sendmessage input { 
  width:95%;
  height:30px;
  line-height : 25px ;
  border:1px solid #aaaaaa;
  font-size : 12px ;
  padding-left:5px;
  flex:1;
}

.sendmessage button { 
  width:18%;
  height:30px;
  line-height : 25px ;
  margin-left:4px;
  font-size : 12px ;
  padding-left:11px;
  padding-top: 8rpx;
}
.sendmessage image{ 
/*被图片设置宽高*/ 
  width: 20px; 
  height: 20px; 
  padding-right:5px;
  padding-top: 10rpx;
} 
