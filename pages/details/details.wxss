@import "../../lib/style/font.wxss";

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.Hui-iconfont {
  font-family: "Hui-iconfont";
  font-size: 30rpx;
}

.iconv-uparrow:after {
  content: '\e6d6';
}

.iconv-downarrow:after {
  content: '\e6d5';
}

page {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

.startBar {
  height: 75rpx;
  background: #333;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 5rpx;
  border-bottom: 0px solid #f2f2f2;
  z-index: 99;
}
.top-title {
  height: 75rpx;
  background: #333;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 5rpx;
  border-bottom: 0px solid #f2f2f2;
  z-index: 99;
}
.top-title-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  color: #fff;
  text-align: center;
  line-height: 75rpx;
  font-size: 48rpx;
  padding: 10rpx;
}
.top-title-item .title-image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 1rpx;
  margin-top: 0rpx;
  margin-left: 20rpx;
}
.banner {
  margin-bottom: 15rpx;
}
.image {
  width: 100% !important;
}

.swiper_box {
  width: 100%;
  height: 750rpx;
}

.swiper_box .slide-image {
  width: 100%;
  height: 750rpx;
  display: inline-block;
  overflow: hidden;
}

.shopping_container {
  display: flex;
  flex-direction: column;
  justify-content: center; /*子项横轴上居中对齐*/
  text-align: center;
  background: #fff;
  border-top: 1rpx solid #eee;
  padding: 10rpx 0 100rpx 0;
  z-index: 1;
}

.shopping_container .img_tag {
  width: 10%;
  height: 30rpx;
  margin: 10px;
}

.shopping_container .goods-name {
  display: flex;
  flex-direction: column;
  align-content: center;
  width: 100%;
  font-size: 36rpx;
  font-weight: bold;
  color: #444;
}

.shopping_container .goods_prom {
  display: block;
  color: #999;
  font-size: 28rpx;
  font-weight: normal;
  white-space: nowrap;
  overflow-x: hidden;
}

.shopping_container .goods-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  font-size: 32rpx;
}

.goods-info .left-tag {
  width: 200rpx;
  height: 60rpx;
  background: #e34c55;
  border-radius: 0 10rpx 10rpx 0;
  line-height: 60rpx;
  color: #fff;
}

.goods-info .right-tag {
  font-size: 36rpx;
  color: #e34c55;
  text-align: right;
  padding-right: 20rpx;
}

.goods_tag {
  color: #999;
  font-size: 24rpx;
  padding: 2rpx 6rpx;
  border: 1px solid #f2f2f2;
  border-radius: 6rpx;
}
.prd-detail {
  margin:0;
  color: #999;
}
.prd-detail text {
  font-size: 28rpx;
}

/*购物车按钮、收藏等*/
.footer {
  background: #fff;
  width: 100%;
  padding-bottom: 50rpx;
  position: fixed;
  bottom: 0;
  border-top: 1rpx solid #eee;
}
.opt-buttons {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.opt-buttons button::after {
border: none;
}
.add-cart {
  line-height: 100rpx;
  text-align: center;
  width: 50%;
  height: 100rpx;
  background-color: #e34c55;
  color: #fff;
  font-size: 32rpx;
  border-radius: 0;
}

.wish-cart {
  outline: none;  
  background: #fff;
  line-height: 100rpx;
  text-align: center;
  width: 50%;
  height: 100rpx;
  color: #e34c55;
  font-size: 32rpx;
  border-radius: 0;
}

/*cart*/

.button-group {
  display: flex;
  flex-direction: column;
}

.button-image {
  width: 60rpx;
  height: 60rpx;
}

.button-text {
  font-size: 24rpx;
  line-height: 40rpx;
}

.contact-button {
  width: 60rpx;
  height: 48rpx;
  padding-top: 5px;
}

/*全部属性的主盒子*/
.modalbox {
  background-color: #fff;
}

.commodity_attr_list {
  background: #fafafc;
  padding: 0 10rpx;
  font-size: 24rpx;
  overflow: hidden;
  width: auto;
}

/*每组属性的主盒子*/
.attr_box {
  width: 100%;
  overflow: hidden;
  border-bottom: 1rpx solid #eee;
  display: flex;
  flex-direction: column;
}
.attr-title {
  padding: 15rpx 0;
}

/*属性名*/

.attr_name {
  width: 20%;
  float: left;
  padding: 15rpx 0;
}

/*属性值*/

.attr_value_box {
  width: 100%;
  float: left;
  padding: 15rpx 0;
  overflow: hidden;
}

/*每个属性值*/

.attr_value {
  padding: 10rpx 20rpx;
  background: #eee;
  border-radius: 10rpx;
  margin:0 10rpx 10rpx 0;
  font-size: 24rpx;
}

/*每个属性选中的当前样式*/

.attr_value_active {
  color: #fff;
  background:#e34c55;
  /* background: #fff;   */
}

/*禁用属性*/

.attr_value_disabled {
  color: #444;
  font-size: 24rpx!important;
}

.price-now {
  color: #E34C55;
  height: 40rpx;
  line-height: 40rpx;
  margin-left: 20rpx;
  font-weight: bold;
}
.price-now::first-letter {
  font-size: 24rpx;
}
.sku-code {
  color: #999;
  font-size: 20rpx;
  margin: 10rpx 0 0 20rpx;
}