@import "../../lib/style/font.wxss";

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.Hui-iconfont {
 font-family: "Hui-iconfont";
 font-size:30rpx;
}
.iconv-uparrow:after {
  content:'\e6d6';
}

.iconv-downarrow:after {
  content:'\e6d5';
}

page{
    background-color: #fff;
    font-size: 14px;
    height: 100%;
}

.image{
  width: 100% !important;
}
.swiper_box {
    width: 100%;
    height: 260px;
}
.swiper_box .slide-image{
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}
.shopping_container{
  height: 340rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;/*子项横轴上居中对齐*/
  text-align: center;
	bottom: 0;
	border-top: 1px solid #eee;	
  border-bottom: 1px solid #eee;
	background: #f5f5f5;
  padding:15rpx;
  z-index: 1;
}

.shopping_container .img_tag {
  width: 10%;
  height: 30rpx;
  margin:10px;
}

.shopping_container .goods-name{
    display: flex;
    flex-direction:column;
    width: 100%;
    height: 100px;
    padding: 5rpx;
	  font-size: 30rpx;
    color: 333;
}
.shopping_container .goods-info{
    display: flex;
    flex-direction:row;
    width: 100%;
    height: 55px;
	  font-size: 30rpx;
    color: gray;
}

.footer {
	background: #f9f9f9;
	width: 100%;
	display: flex; 
	flex-direction: row; 
	justify-content: space-between;
	position: fixed;
	bottom: 0;
}
.add-cart {
	float: right;
	border: 0;	
	line-height: 100rpx;
	text-align: center;
	width: 350rpx;
	height: 100rpx;
	background-color: #f60;
	color: white;
	font-size: 36rpx;
	border-radius: 0px;
}

/*购物车按钮、收藏等*/
.opt-buttons {
	width: 100%;
	display: flex;
	flex-direction: row-reverse;
	justify-content: space-around;
}

/*cart*/
.button-group {
	display: flex;
	flex-direction: column;
}

.button-image {
	width: 60rpx;
	height: 60rpx;
}

.button-text {
	font-size: 24rpx;
	line-height: 40rpx;
}

.contact-button {
	width: 60rpx;
	height: 48rpx;
	padding-top: 5px; 
}
/*全部属性的主盒子*/
.commodity_attr_list { 
 background: #fff; 
 padding: 0 20rpx; 
 font-size: 25rpx; 
 overflow: hidden; 
 width: auto; 
 height: 320px;
} 
/*每组属性的主盒子*/
.attr_box { 
 width: 100%; 
 overflow: hidden; 
 border-bottom: 1rpx solid #ececec; 
 display: flex;
 flex-direction: column;
} 
/*属性名*/
.attr_name { 
 width: 20%; 
 float: left; 
 padding: 15rpx 0; 
} 
/*属性值*/
.attr_value_box { 
 width: 100%; 
 float: left; 
 padding: 15rpx 0; 
 overflow: hidden; 
} 
/*每个属性值*/
.attr_value { 
 float: left; 
 padding: 0 10rpx; 
 margin: 5rpx 5rpx; 
 border: 1rpx solid #ececec; 
 border-radius:5px;
 line-height:20px;
} 
/*每个属性选中的当前样式*/
.attr_value_active { 
 border-radius: 10rpx; 
 color: #0089dc; 
 padding: 0 20rpx; 
 border: 1rpx solid #0089dc; 
 /* background: #fff;   */
} 
/*禁用属性*/
.attr_value_disabled { 
 color: #ccc; 
} 
