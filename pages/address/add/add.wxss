page {
	height: 100%;
}
.addrlist {
	font-size: 26rpx;
}
/*省市区文本框*/
.area_select {
	color: #999999;
	width: 80%;
}

.poi {
	font-size: 12px;
}

/*弹窗主体*/
.modal-content {
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 600px;
	/*box-shadow: 10rpx 0 30rpx rgba(0,0,0,.9);*/
	z-index: 999;
	background-color: #ffffff;
	border-radius: 20rpx 20rpx 0 0;
}

/*遮罩层*/
.modal-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
    opacity: .35;
    z-index: 999;
}

/*弹窗头部*/
.modal-header {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	width: 100%;
	height: 30px;
	background-color: #ffffff;
}

/*所在地区字样*/
.modal-title {
	width: 70%;
	color: #444444;
	font-weight: bold;
	font-size: 32rpx;
	line-height: 30px;
	text-indent: 10px;
}

/*关闭按钮*/
.modal-close {
	width: 36px;
}
.modal-close image {
	width: 14px;
	height: 14px;
	margin: 8px 10px;
}
.modal-body {
	font-size: 14px;
}

/*每级地区标题*/
.viewpager-title {
	padding: 0 10px;
	/*color: #f03118;*/
	line-height: 30px;
}

/*分隔线*/
.viewpager-divider {
	width: 100%;
	height: 1px;
	background: #eeeeee;
}

/*左右滑动控件*/
.swiper-area {
	height:380px;
}

/*地址列表ListView容器*/
.viewpager-listview {
	padding-top: 5px;
	height: 100%;
}

/*每行地址item项*/
.viewpager-listview view{
	line-height: 30px;
	padding: 0 10px;
}

/*高亮当前所选地区*/
.area-selected {
	color: #111111;
}

/*初始隐藏*/
.hidden {
	display: none;
}

/*运行时显示*/
.show {
	display: flex;
}

/*单元格*/
.cell {
	display: flex;
	flex-direction:row;
	justify-content: flex-start;
	align-items:center;
	padding: 20px;
	border-bottom: 1px solid #f2f2f2;
	line-height: 44px;
}

.cell:last-child {
	border-bottom: 0;
}

/*label显示字符*/
.cell text:first-child {
	width: 50px;
}

/*请选择区域*/
.region {
	width: 90%;
}

/*保存按钮*/
.save {
	margin: 8px;
	background-color: #ff952d!important;
	border: none!important;
	border-radius: 20rpx!important;
}

.upimg {
  display: flex;
  flex-direction: column;
}
.upimage {
  display:flex;
  flex-direction:row;
  padding: 0 20rpx;
}

.upimage image {
 /*被图片设置宽高*/ 
  width: 80rpx; 
  height: 80rpx; 
