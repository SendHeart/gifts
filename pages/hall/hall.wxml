		<icon style="margin-top:-5rpx;" type="{{selectedAllStatus ? 'success_circle' : 'circle'}}" size="18"/>
		<text>全选</text>
	</view>

  <text class="picktext" bindtap="bindPickGoods">继续挑选+</text>
