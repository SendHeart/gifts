/*商品列表头*/
.carts-more {
	height: 40rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;/*子项横轴上居中对齐*/
	bottom: 0;
	border-top: 1px solid #eee;	
  border-bottom: 1px solid #eee;
	background: white;
  padding:25rpx;
  margin-bottom: 80rpx;
  z-index: 1;
}

.note {
  height: 100rpx;
  padding:20rpx;
	background: white;
}
.note textarea {
  width:100%;
  height: 5em;
  margin-top:5rpx;
  border: 0px solid #eee;	
}
