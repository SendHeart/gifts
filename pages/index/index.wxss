@import "../../lib/style/font.wxss";

page {
  background: #f2f2f2;
  height: 100%;
}

.Hui-iconfont {
  font-family: "Hui-iconfont";
  font-size: 30rpx;
}

.iconv-uparrow:after {
  content: '\e6d6';
}

.iconv-downarrow:after {
  content: '\e6d5';
}

.container {
  padding: 80rpx 0;
  background: #f2f2f2;
}

.order-item {
  width: 96%;
  margin: 15rpx auto;
  background: #fff;
  border-radius: 10rpx;
}


.order-footer {
  padding: 0 20rpx 10rpx 20rpx;
  display: flex;
  flex-direction: row;
}

.order-footer text {
  font-size: 24rpx;
}
.smallbtn {
  border: 3rpx solid #e34c55;
  color: #e34c55;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  margin-left:10rpx;
}
.smallbtn2 {
  border: 3rpx solid #999;
  color: #999;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  margin-right:10rpx;
}

/*接受方微信头像*/

.order-footer image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

/*每行单元格*/

.carts-item {
  display: flex;
  flex-direction: row;
  height: 150rpx;
  /*width属性解决标题文字太短而缩略图偏移
  border-bottom: 1px solid #eee;*/
  padding: 10rpx;
}

/*左部图片*/

.carts-image {
  margin-left: 10rpx;
  margin-bottom: 10rpx;
  width: 110rpx;
  height: 110rpx;
}

/**/

.shop-text {
  margin: 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  color: #999;
  justify-content: space-between;
}

.status {
  color: #e34c55;
}

.status2 {
  color: #999;
}

/*logo部图片*/

.logo-image {
  width: 50rpx;
  height: 50rpx;
}

/*右部描述*/

.carts-text {
  margin-left: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/*右上部分标题*/

.carts-title {
  font-size: 28rpx;
  color: #444;
  line-height: 38rpx;
}

/*右下部分价格与数量*/

.carts-subtitle {
  font-size: 25rpx;
  color: #999;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

/*地址*/

.order-address {
  float: left;
  margin-left: 10rpx;
  color: darkgray;
  font-size: 14px;
  line-height: 22px;
  display: flex;
  flex-direction: row;
}

/*价格*/

.order-price {
  float: right;
  color: #f60;
  font-size: 14px;
  line-height: 22px;
  display: flex;
  flex-direction: row;
}

/*隐藏元素*/

.hidden {
  display: none;
}

/*导航 nav*/

.top-bar {
  height: 76rpx;
  background: white;
  white-space: nowrap;
  position: fixed;
  top: 0;
  z-index: 99;
}

.top-bar-item {
  display: inline-block;
  width: 120rpx;
  color: #444;
  text-align: center;
  line-height: 70rpx;
  font-size: 32rpx;
}

.top-bar-active {
  color: #444;
  font-weight: bold;
  border-bottom: 6rpx solid #e34c55;
}

/*辅助导航 nav2*/

.banner {
  width: 100%;
  height: 90rpx;
  padding-top: 0rpx;
  /*margin-left: 15rpx;*/
}

.top-bar2 {
  height: 74rpx;
  background: #fff;
  width: 100%;
  position: fixed;
  top: 0;
  border-bottom: 1px solid #f2f2f2;
  z-index: 99;
}

.top-bar-item2 {
  display: inline-block;
  width: 375rpx;
  color: #999;
  text-align: center;
  line-height: 70rpx;
  font-size: 32rpx;
}

.top-bar-active2 {
  color: #444;
  font-weight: bold;
  border-bottom: 4rpx solid #e34c55;
}

.morebtn {
  margin: 20rpx;
  border: 0;
  background: #f2f2f2;
  color: #e34c55;
}