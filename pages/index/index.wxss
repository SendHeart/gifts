@import "../../lib/style/font.wxss";

page {
  background: #f2f2f2;
  height: 100%;
}

.Hui-iconfont {
  font-family: "Hui-iconfont";
  font-size: 30rpx;
}

.iconv-uparrow:after {
  content: '\e6d6';
}

.iconv-downarrow:after {
  content: '\e6d5';
}

.startBar {
  height: 75rpx;
  background: #333;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 5rpx;
  border-bottom: 0px solid #f2f2f2;
  z-index: 99;
}
.top-title {
  height: 75rpx;
  background: #333;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 5rpx;
  border-bottom: 0px solid #f2f2f2;
  z-index: 99;
}
.top-title-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  color: #fff;
  text-align: center;
  line-height: 75rpx;
  font-size: 48rpx;
  padding: 10rpx;
}
.top-title-item .title-image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 1rpx;
  margin-top: 0rpx;
  margin-left: 20rpx;
}
.container {
  padding-top: 80rpx;
  background: #f2f2f2;
  height: 100%;
  overflow-x: hidden;
}

.order-item {
  position: relative;
  width: 96%;
  margin: 15rpx auto 0 auto;
  background: #fff;
  border-radius: 10rpx;
  z-index: 0;
}


.order-footer {
  padding: 0 20rpx 10rpx 20rpx;
  display: flex;
  flex-direction: row;
}

.order-footer text {
  font-size: 24rpx;
}
.smallbtn {
  border: 3rpx solid #e34c55;
  color: #e34c55;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  margin-left:10rpx;
  text-align:center;
}
.smallbtn2 {
  border: 3rpx solid #999;
  color: #999;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  margin-right: 6rpx;
}
.recyclebtn {
  position: absolute;
  top:0rpx;
  right: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #e34c55;
  color: #fff;
  padding: 10rpx 12rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  text-align:center;
  font-size: 24rpx;
  line-height: 24rpx;
}
.recyclebtn image {
  width: 24rpx;
  height: 24rpx;
  margin: 0 6rpx;
}
.recyclestatus {
  position: absolute;
  top:20rpx;
  right: 20rpx; 
  color: #999;
  font-size: 24rpx;
  line-height: 24rpx;
}
.commbtn {
  font-size: 24rpx;
  border: 3rpx solid #e34c55;
  color: #e34c55;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  margin-left:10rpx;
  text-align:center;
  z-index: 99;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
/*接受方微信头像*/

.order-footer image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

/*每行单元格*/

.carts-item {
  display: flex;
  flex-direction: row;
  height: 140rpx;
  /*width属性解决标题文字太短而缩略图偏移*/
  border-bottom: 1rpx solid #f2f2f2;
  padding: 10rpx;
}

/*左部图片*/

.carts-image {
  margin-left: 10rpx;
  margin-bottom: 10rpx;
  width: 100rpx;
  height: 100rpx;
}

/**/

.shop-text {
  margin: 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  color: #999;
  justify-content: space-between;
}

.status {
  color: #e34c55;
}

.status2 {
  color: #999;
}

/*logo部图片*/

.logo-image {
  width: 50rpx;
  height: 50rpx;
}

/*右部描述*/

.carts-text {
  margin-left: 10rpx;
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
}

/*右上部分标题*/

.carts-title {
  font-size: 28rpx;
  color: #444;
  line-height: 38rpx;
  overflow:hidden;  
  text-overflow:ellipsis;  
  white-space:nowrap; 
}
.carts-sku {
  font-size: 24rpx;
  color: #999;
  line-height: 32rpx;
  overflow:hidden;  
  text-overflow:ellipsis;  
  white-space:nowrap; 
}

/*右下部分价格与数量*/

.carts-subtitle {
  font-size: 24rpx;
  color: #999;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

/*地址*/

.order-address {
  float: left;
  margin-left: 10rpx;
  color: darkgray;
  font-size: 14px;
  line-height: 22px;
  display: flex;
  flex-direction: row;
}

/*价格*/

.order-price {
  float: right;
  color: #f60;
  font-size: 14px;
  line-height: 22px;
  display: flex;
  flex-direction: row;
}

/*隐藏元素*/

.hidden {
  display: none;
}

/*导航 nav*/

.top-bar {
  height: 76rpx;
  background: white;
  white-space: nowrap;
  position: fixed;
  top: 0;
  z-index: 99;
}

.top-bar-item {
  display: inline-block;
  width: 120rpx;
  color: #444;
  text-align: center;
  line-height: 70rpx;
  font-size: 32rpx;
}

.top-bar-active {
  color: #444;
  font-weight: bold;
  border-bottom: 6rpx solid #e34c55;
}

/*辅助导航 nav2*/

.banner {
  width: 100%;
  height: 90rpx;
  padding-top: 0rpx;
  /*margin-left: 15rpx;*/
}

.top-bar2 {
  height: 76rpx;
  background: #1d1d1d;
  width: 100%;
  position: fixed;
  top: 0;
  border-bottom: 1px solid #f2f2f2;
  z-index: 99;
}

.top-bar-item2 {
  display: inline-block;
  width: 375rpx;
  color: #fff;
  text-align: center;
  line-height: 70rpx;
  font-size: 32rpx;
}

.top-bar-active2 {
  color: #fff;
  font-weight: bold;
  border-bottom: 6rpx solid #e34c55;
}

.morebtn {
  margin: 20rpx;
  border: 0;
  background: #f2f2f2;
  color: #e34c55;
  font-size: 28rpx;
}


.modalbox {
  height: 90%;
  z-index: 99;
}
.buyin_title {
  display: flex;
  flex-direction:column;
  justify-content: center;
  text-align: center;
  margin: 30rpx auto;
}
.buyin_title text {
  display: block;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.buyin_content {
  display: flex;
  flex-direction:column;
  justify-content: left;
  margin: 30rpx auto;
  font-size: 24rpx;
  height:280rpx;
}
.buyin_content .buyin_text {
  display: block;
  font-size: 24rpx;
  color: #999;
  height: 46rpx;
}

/* 返回顶部 */
.goTop{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;  
  
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 30rpx;
  background: rgba(0,0,0,.3);
  right: 30rpx;
  border-radius: 50%;
  color:#fff;
  font-size: 8;
  z-index: 999;
}
