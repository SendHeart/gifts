.page-body-button {
  margin-bottom: 30rpx;
}

live-player {
  width: 100%;
  height: 225px;
}
.slide-image {
  width: 100%;
  height: 950rpx;
  display: inline-block;
  overflow: hidden;
  z-index:1;
}
.goods-list {
  width:100%;
  position:fixed;
  display:flex;
  flex-direction:row;
  justify-content: space-around;
  border:0px solid #aaaaaa;
  top: 20rpx;
  padding-left:2px;
  padding-bottom:10px;
  overflow: hidden;
  opacity:1;
  z-index: 999;
}
.goods-list button { 
  width:18%;
  height:30px;
  line-height : 25px ;
  margin-left:15px;
  font-size : 12px ;
  padding-left:11px;
  padding-top: 8rpx;
  opacity:0.4;
}
.goods-list label { 
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 120rpx;
  height:30px;
  line-height: 30px;
  margin:0 50rpx auto;
  font-size:20rpx;
  opacity:0.6;
}
.sendmessage {
  width:100%;
  position:fixed;
  display:flex;
  flex-direction:column;
  border:0px solid #aaaaaa;
  bottom: 50rpx;
  padding-left:2px;
  padding-bottom:10px;
  overflow: hidden;
  opacity:1;
  z-index: 999;
}

.sendmessage .text {
   width:90%;
  display:flex;
  flex-direction:row;
  border:0px solid #aaaaaa;
  justify-content: center;
  text-align: center;
  margin:0 auto;
}

.sendmessage input { 
  width:80%;
  height:30px;
  line-height : 25px ;
  border:1px solid #aaaaaa;
  font-size : 12px ;
  color:#fff;
  padding-left:5px;
  flex:1;
}

.sendmessage button { 
  width:18%;
  height:30px;
  line-height : 25px ;
  margin-left:15px;
  margin-right:15rpx;
  font-size : 12px ;
  padding-left:11px;
  padding-top: 8rpx;
  opacity:0.4;
}
.sendmessage image{ 
  width: 20px; 
  height: 20px; 
  padding-right:5px;
  padding-top: 10rpx;
} 

