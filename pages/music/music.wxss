.item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 100%;
  height: 100rpx;
  border: 1rpx solid #eee;
  padding: 10rpx;
}

.item-image {
  width: 80rpx;
  height:80rpx;
  border-radius: 50%;
}

.item-text {
  margin-left: 10rpx;
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  text-align: left;
}

.item-text-name {
  font-size: 28rpx;
  font-weight: bolder;
}
.item-text-author {
  font-size: 20rpx;
  font-weight: lighter;
}
.active {
  background: #a51515;
  color: #fff;
}

.play-song {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  background: #f5f5f5;
}

.play-song .info{
  position: fixed;
  top: 15rpx;
  left: 0;
  right: 0;
  font-size: 12pt;
  color: #353535;
}

.play-song .icon-list {
  position: absolute;
  right: 40rpx;
  top: 10rpx;
  width: 60rpx;
  height: 60rpx;
}

.play-song .poster {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-top: 120rpx;
}

.rotate {
  animation: rotate 10s linear infinite;
}

.rotate-paused {
  animation: rotate 10s linear infinite;
  animation-play-state: paused;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }

  50% {
    transform: rotate(180deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.progress {
  position: fixed;
  bottom: 90rpx;
  left: 50rpx;
  right: 50rpx;
  display: flex;
  align-items: center;
  font-size: 10pt;
  color: rgb(87, 49, 49);
  text-align: center;
}

.progress .bar {
  flex: 1;
}

.progress text {
  flex-basis: 90rpx;
}

.buttons {
  position: fixed;
  bottom: 20rpx;
  left: 50rpx;
  right: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.buttons .button {
  width: 70rpx;
  height: 70rpx;
}
.lrc-title{
  width:100%;
  color:gray;
  border:1px solid rgba(244,244,244,0.2);
}
.lrc-line{
  text-align:center;
  margin:20rpx 0rpx;
}