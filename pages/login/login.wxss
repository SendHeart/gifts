
page{height:100%}
.beij{
  width:100%; 
  height:100%;
  overflow: hidden; 
}
.bjt{
  width:100%;
  height:100%;
  position:absolute; 
  z-index:-1;
  margin:0;
  padding:0 
}
.weui-cell:before{
  border:none;
}
.iphone{
  height: 94rpx;
  background-color:#fff;
  border-radius:50rpx;
  margin-bottom:28rpx
}
.vcode{
  height: 94rpx;
  background-color:#fff;
  border-radius:50rpx;
  margin-bottom:28rpx;
}
.btn{
  height: 94rpx;
  background-color: #ffcf3b;
  border-radius:50rpx;
  margin-bottom:56rpx;
  line-height: 94rpx;
  font-size: 36rpx;
}
.weui-vcode-btn{
  border: none;
}
.code{
  margin-right: 17rpx;
}
.code button{
  border: none;
  background-color: #fff;
}
button::after{
  border: none;
}
button[disabled][type="default"], wx-button[disabled]:not([type]) {
color:#cd3830;
background-color:#fff;

}

.subject {
  width: 100%;
  height: 120rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  margin-top: 20rpx;
}

.subject text {
  width: 100%;
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.subject image {
  width: 45%;
  height: 100rpx;
  margin: 10rpx;
}

.subject .toptitle {
  font-size: 42rpx;
  color: #444;
  width: 90%;
  padding: 20rpx;
}
.linegray {
	border-bottom: 1rpx solid #eeeeee;
}

/*user info*/
.logininfo {
  display: flex;
  flex-direction: column;
  align-items:center;
  line-height: 200%;
  height: 400rpx;
  margin-top: 200rpx;
}

.logininfo-logo {
  width: 120rpx;
  height: 120rpx;
  margin: 40rpx;
  border-radius: 50%;
}

.logininfo-auth {
  color: #444444;
  font-size: 32rpx;
  font-weight: normal;
}

.logininfo-authinfo {
  color: #444444;
  font-size: 24rpx;
  font-weight: normal;
}
.logininfo_row {
  display: flex;
  flex-direction: row;
  align-items:center;
  text-align: center;
  align-content: center;
  font-size: 24rpx;
  
}
.return {
  display: flex;
  flex-direction: column;
  align-items:center;
  line-height: 80;
  height: 80rpx;
  
}