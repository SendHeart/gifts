/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.voice{
  padding-top: 50rpx;
}

.mytext{  
  border: solid 0px black;  
  display: flex;  
  flex-direction: row;  
  justify-content: flex-end;  
  margin:5px;
  color: blue;
}  
.gettext{  
  border: solid 0px black;  
  display: flex;  
  flex-direction: row;  
  justify-content: left;  
  margin:5px;
  color: red;
}  

.button-voice-play,
.button-bpPage{
  margin-top: 20rpx;
}

.button-hover{
  background-color: 999;
}

.sendmessage {
  width:95%;
  position:fixed;
  display:flex;
  flex-direction:column;
  border:0px solid #aaaaaa;
  bottom: 0;
  padding-left:2px;
  padding-bottom:10px;
  overflow: hidden;
  opacity:1;
  z-index: 999;
}

.sendmessage .upimage {
  display:flex;
  flex-direction:row;
  border:0px solid #aaaaaa;
  
}

.sendmessage .upimage image {
 /*被图片设置宽高*/ 
  width: 40px; 
  height: 40px; 
  padding-left:10px;
  padding-bottom: 10rpx;
  
}

.sendmessage .text {
  display:flex;
  flex-direction:row;
  border:0px solid #aaaaaa;
  
}

.sendmessage input { 
  width:95%;
  height:30px;
  line-height : 25px ;
  border:1px solid #aaaaaa;
  font-size : 12px ;
  padding-left:5px;
  flex:1;
}

.sendmessage button { 
  width:18%;
  height:30px;
  line-height : 25px ;
   margin-left:4px;
  font-size : 12px ;
  padding-left:11px;
  padding-top: 8rpx;
}
.sendmessage image{ 
/*被图片设置宽高*/ 
  width: 20px; 
  height: 20px; 
  padding-right:5px;
  padding-top: 10rpx;
} 

.historycon {
  height: 70%;
  flex-direction:column;
  display:flex;
  border : 0px solid #aaaaaa ;
  border-top:0px;
}
.history{
  height:70%;
  margin-top:10px;
  margin:10px;
  font-size:14px;
  line-height:20px;
  word-break:break-all;
}
