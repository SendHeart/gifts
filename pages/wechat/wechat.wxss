
.weui-flex__item{flex:initial;}
.pull-left{float: left;}
.pull-right{float: right;}
.clearfix{clear: both;height: 50px;}

.btns .weui-flex__item:nth-child(1){width: 70%;}
.btns .weui-flex__item:nth-child(2){width: 10%;margin: 0 2.5%;}
.btns .weui-flex__item:nth-child(3){width: 10%;margin: 0 2.5%;}
.btns .weui-flex__item image{width: 32px;height: 32px;display:block;}
.btns .weui-flex__item input{background:white;padding: .3rem .5rem;min-height: initial;height: initial;line-height: initial;}
.btns .weui-flex__item button{font-size:.8rem;padding: 0px;}
.btns{padding:.5rem;background: #f9f8f8;position:fixed;margin-top:20px;bottom:0;width:100%;}

.list-item{padding: 2%;width: 96%;margin:0 5px auto;}
.list-item-nickname{color: #ccc;font-size:.8rem;}
.list-item-pubtime{color: #ccc;font-size:.7rem;}
.list-item-headimg{margin-left:5px;width: 20px;height: 20px;border-radius: 50%;}
.list-item-content{font-size:1rem;}
.list-item-content .look{width: 32px;height:32px;display: inline-block;margin-left: .2rem;}
.list-item-content .msg .msg-box-right{margin-top: .2rem;padding-left:5px;padding-right:5px;border-radius: 5px;background: #fff;color:#666;text-align: left;}
.list-item-content .msg .msg-box-left{margin-top: .2rem;padding-left:5px;padding-right:5px;border-radius: 5px;background: #1482D1;}

.list-item-content .msg{float: right;display:flex;flex-direction: row; justify-content: space-around; color: #ccc; margin-right:10px; }
.list-item-content .clear{clear: both;content: '';}
.list-item.pull-left{text-align: left;}
.list-item.pull-right{text-align: right;}

.scroll-view{padding:0 .5rem;width: 100%;}

.chat-bar {
  width: 100%;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  position: relative;
  top: 0;
  z-index: 9; 
}

.bar-buttons {
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  align-items: center;
  margin-right:20rpx;
  padding: 0 auto;
}
.bar-buttons .btnshare {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background:rgba(0, 0, 0, 0.5);
  font-size: 24rpx;
  color: #fff;
  padding: 6rpx 20rpx;
  line-height: 2;
  border-radius: 10rpx;
  opacity: 0.6;
}

.bar-buttons .btnback {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 24rpx;
  color: #fff;
  padding: 6rpx 20rpx;
  line-height: 2;
  border-radius: 10rpx;
  opacity: 0.6;
}

.bar-buttons .shareto {
  width: 32rpx;
  height: 32rpx;
  margin:8rpx 6rpx 0 0;
}