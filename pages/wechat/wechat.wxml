<view style="height:100%;box-sizing: border-box;">
	<scroll-view scroll-y id="chat-content" class="scroll-view" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
		<block wx:for="{{messages}}" wx:key="index">
			<view class="list-item {{ item.user == 'customer' ? 'pull-right' : 'pull-left' }}">
				<view class="list-item-nickname">{{ item.from_nickname }} 
					<span class="list-item-pubtime">{{ item.createtime }}</span>				
				</view>
				<view id="content" class="list-item-content">
					<view class="msg">
						<view class="msg-box">{{ item.content }}</view>
						<!--
							<image class="list-item-headimg" src="{{item.from_headimg}}" mode="widthFix"></image>		
						-->
					</view>
					<view class="clear"></view>
				</view>
			</view>
		</block>
		<view class="clearfix"></view>	
	</scroll-view>
	<view class="btns">
			<view class="weui-flex">
				<view class="weui-flex__item">
						<input type="text" bindinput="changeInput" value="{{ inputValue}}" class="weui-input" bindconfirm="getInputMessage" bindfocus="closeUse" bindblur="inputBlur" />
				</view>
				<view class="weui-flex__item">
					<button type="primary" bindtap="getInputMessage">发送</button>
				</view>
				<view class="weui-flex__item">
					<image src="../../images/number_add.png" />
				</view>
			</view>
		</view>
</view>

