  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  height: 220rpx;
  background: #292929;
}
.userinfo_my {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  height: 220rpx;
