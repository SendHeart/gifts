/*导航 nav*/
.top-bar {
  height: 72rpx;
  background: #292929; 
  width:100%;
  position: fixed;
  top:0;
  z-index:1;
}
.top-bar-item {
  display:inline-block;
  width: 120rpx;
  color: #fff;
  text-align: center;
  /* line-height: 72rpx; */
  font-size: 30rpx;
}
.top-bar-active{
  color: red;
  font-size: 34rpx;
}

/*辅助导航 nav2*/
.top-bar2 {
  height: 72rpx;
  background: #292929; 
  width:100%;
  position: fixed;
  margin-top: 70rpx;
  top:0;
  border-top: 1px solid #F2f2f2;
  z-index:1;
}
.top-bar-item2 {
  display:inline-block;
  width: 250rpx;
  color: #fff;
  text-align: center;
  /* line-height: 72rpx; */
  font-size: 32rpx;
}
.top-bar-active2 {
  color: red;
  font-size: 38rpx;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
}

view.text {
    display: flex;
    align-items: center;
    position: relative;
    padding: 10px 10px 10px 12px;
    font-size: 15px;
    color: #656565;
}

view.text:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -5px;
    width: 2px;
    height: 100%;
    background-color: #09bb07;
}

.line_flag {
    width: 3px;
    height: 100%;
    display: inline-block;
    background-color: #f9f027;
}

view.text text {
    margin-left: 10px;
    line-height: 18px;
    font-weight: bold;
}

.venues_box {
  display:block;
  width: 98%;
  padding-bottom:100rpx;
  margin-left:2%;
  margin-top: 15rpx;
  overflow-x: hidden;
}

.venues_item {
  display: inline-block;
  width: 47%;
  margin: 0 1% 15rpx 1%;
  background: #ffffff;
  border-radius: 10rpx;
  text-indent: 20rpx;
  padding-bottom: 20rpx;

}

.venues_item .mainpic {
  display: block;
  width: 310rpx;
  height: 310rpx;
  margin: 20rpx auto;
}

 .venues_item .goods_name {
  display: block;
  color: #444;
  font-size:28rpx;
}

 .venues_item .goods_tag {
   color: gray; 
   font-size: 8pt;
   margin-top:0px;
   border: 2px solid #F2f2f2;
   border-style: solid;  
}
.venues_item .goods_tag image{
  width: 10%;
  height: 30rpx;
}
 .venues_item .goods_prom {
  display: block;
  color: #999;
  font-size:28rpx;
  white-space: nowrap;
  overflow-x: hidden;
}
.price-now {
  color: #e34c55;
  font-size:28rpx;
  font-weight: bold;
}
.price-now::first-letter {
  font-size: 20rpx;
}
