@import "../../lib/style/font.wxss";

.startBar {
  background: rgba(10, 10, 10, 0.9);
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 99;
}
.top-title {
  height: 88rpx;
  background: rgba(10, 10, 10, 0.9);
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 99;
}
.top-title-item {
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items: center;
  text-align: center;
  width: 100%;
  color: #fff;
  line-height: 88rpx;
  font-size: 40rpx;
  font-weight: bold;
}
.top-title-item .title-image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 1rpx;
  margin-top: 0rpx;
  margin-left: 30rpx;
  display: none;
}
.top-title-item .title-text { width: 100%; margin-left: 0rpx;}
/*------------titlebar end-------------*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.Hui-iconfont {
 font-family: "Hui-iconfont";
 font-size:30rpx;
}
.iconv-uparrow:after {
  content:'\e6d6';
}

.iconv-downarrow:after {
  content:'\e6d5';
}

.container {
    background-color: #F2f2f2;
    width: 100%;
    height: 100%;
    overflow: hidden;
    margin: 0;
    padding: 0;
}

/*user info*/
