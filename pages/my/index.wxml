 <view>
<modal class="modalbox" title="用户协议" hidden="{{modalHiddenAgreement}}" confirm-text="同意并确认" cancel-text="返回" bindconfirm="modalBindconfirmAgreement" bindcancel="modalBindcancelAgreement" no-cancel >
    <view class="prd-detail">
      <view class='wxParse'>
        <template is="wxParse" data="{{wxParseData:dkcontent1.nodes}}" />
      </view> 
    </view>
</modal>
<modal class="modalbox" title="{{artTitle}}" hidden="{{modalHiddenPlaysx}}" confirm-text="返回" cancel-text="取消" bindconfirm="modalBindconfirmPlaysx" bindcancel="modalBindcancelPlaysx" no-cancel >
    <view class="prd-detail">
      <view class='wxParse'  style="height:{{dkheight}}px">
        <template is="wxParse" data="{{wxParseData:dkcontent2.nodes}}" />
      </view> 
    </view>
</modal>
<modal class="modalbox" title="{{artTitle}}" hidden="{{modalHiddenArtInfo}}" confirm-text="返回" cancel-text="分享" bindconfirm="modalBindconfirmArtInfo" bindcancel="modalBindShareArtInfo" >
    <view class="prd-detail">
      <view class='wxParse'  style="height:{{dkheight}}px">
        <template is="wxParse" data="{{wxParseData:dkcontent2.nodes}}" />
      </view> 
    </view>
</modal>
<modal class="modalbox" title="{{needPhoneNumber}}"  hidden="{{modalHiddenPhone}}" confirm-text="确定" no-cancel  bindconfirm="modalBindconfirmPhone">
    <view class="sentbtn">
      <button open-type="getPhoneNumber" lang="zh_CN" bindgetphonenumber="getPhoneNumber">手机授权</button>
    </view>
</modal>
<modal class="modalbox" title="{{needUserName}}"  hidden="{{modalHiddenUserName}}" confirm-text="确定" no-cancel  bindconfirm="modalBindconfirmUsername">
  <view class="sentbtn" style="height:100rpx;background: #f2f2f2;">
    <input name="user_name" value="{{user_name}}" placeholder="请输入姓名"  bindinput='user_nameTapTag' focus="{{inputShowed}}" maxlength='50' />
  </view>
  <radio-group bindchange="radiochange" style="margin-left:80rpx;">
    <radio value='1' style="margin-left:30rpx;">男</radio>
    <radio value='2' style="margin-left:30rpx;">女</radio>
  </radio-group>
</modal>
<modal hidden="{{modalHiddenArt}}" title="请选择文章" confirm-text="确定" cancel-text="返回" bindcancel="modalBindcancelArt" bindconfirm="modalBindconfirmArt">
 <view class="picker_box">
    <picker bindchange="bindArtPickerChange" value="{{article[art_index].id}}" data-selecthx="{{article[art_index].title}}" range="{{article}}" range-key="{{'title'}}">
      <view class="picker">
         {{article[art_index]['title']}}
      </view>
    </picker>
  </view>
</modal> 
