page {
	background: #F2F2F2;
  width: 100%;
  height: 100%;
}

 
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.Hui-iconfont {
 font-family: "Hui-iconfont";
 font-size:30rpx;
}
.iconv-uparrow:after {
  content:'\e6d6';
}

.iconv-downarrow:after {
  content:'\e6d5';
}

.startBar {
  background: rgba(10, 10, 10, 0.9);
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 99;
}
.top-title {
  height: 88rpx;
  background: rgba(10, 10, 10, 0.9);
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 99;
}
.top-title-item {
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items: center;
  text-align: center;
  width: 100%;
  color: #fff;
  line-height: 88rpx;
  font-size: 40rpx;
  font-weight: bold;
}
.top-title-item .title-image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 1rpx;
  margin-top: 0rpx;
  margin-left: 30rpx;
  display: none;
}
.top-title-item .title-text { width: 100%; margin-left: 0rpx;}
.banner {
	width: 100%;
  height: 100rpx;
	/*margin-left: 15rpx;*/
  background-color:white;
  background-repeat:repeat;
  padding-top: 35rpx;
  opacity:1;
  /*
  position: fixed;
  top:0;
  z-index:99;
  */
  
}

.banner image {
	width: 100%;
	height: 200rpx;
}

.banner .slogan{  
  border: solid 0px black;  
  display: flex;  
  flex-direction: row;  
  justify-content: center;  
  margin:5px;
}  
/*user info*/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items:center;
  height: 240rpx;
  background: #292929;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-top: 40rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}


/*order*/
.menu-area {
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: space-between;
  background: white;
  padding:0 20rpx;
  margin-bottom: 15rpx;
  margin-top: 15rpx;
}

/*menu list*/
.tableviewcell {
	width:100%;
  height: 100%;
  padding: 20rpx;
	color: #444;
	background: white;
	display: flex;
  flex-direction: row;
	align-items: center;
}
.linegray {
	border-bottom: 1rpx solid #ddd;
}
/*icon*/
.tableviewcell image {
	width: 48rpx;
	height: 48rpx;
}

/*text*/
.tableviewcell text {
	font-size: 28rpx;
	margin-left: 20rpx;
}
.inlinetips {
  color: #999;
  font-size: 28rpx;
}

/*button*/
.logout {
	margin: 30rpx;
  border: 0;
  background: transparent;
  color: #999;
  font-size: 24rpx;
}
.logout::after {
  border: 0;
}

/*order*/
.order-area {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: white;
  margin: 20rpx 0;
  padding: 20rpx 0;
}

.order {
	width: 33.3%;
	text-align: center;
}

.order image {
	width: 90rpx;
	height: 90rpx;
}

.order text{
	display: block;
	font-size: 30rpx;
	color: #333;
}
/** 修改button默认的点击态样式类**/
.button-hover {
  background-color: red;
}
/** 添加自定义button点击态样式类**/
.other-button-hover {
  background-color: blue;
}

.clickBtn{  
  font-size:28rpx;
  width: 100%;
  background-color:white;  
  color:#444;  
  overflow:hidden;  
  margin-left:-1rpx;
  border: 0;
  text-align: left;
}  
  
.clickBtn::after {
  border: 0;
} 