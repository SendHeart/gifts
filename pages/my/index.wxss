page {
	background: #F3F3F3;
  width: 100%;
  height: 100%;
}

 
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.Hui-iconfont {
 font-family: "Hui-iconfont";
 font-size:30rpx;
}
.iconv-uparrow:after {
  content:'\e6d6';
}

.iconv-downarrow:after {
  content:'\e6d5';
}

.startBar {
  height: 75rpx;
  background: #333;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 5rpx;
  border-bottom: 0px solid #f2f2f2;
  z-index: 99;
}
.top-title {
  height: 75rpx;
  background: #333;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 5rpx;
  border-bottom: 0px solid #f2f2f2;
  z-index: 99;
}
.top-title-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  color: #fff;
  text-align: center;
  line-height: 75rpx;
  font-size: 48rpx;
  padding: 10rpx;
}
.top-title-item .title-image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 1rpx;
  margin-top: 0rpx;
  margin-left: 20rpx;
}
.banner {
	width: 100%;
  height: 100rpx;
	/*margin-left: 15rpx;*/
  background-color:white;
  background-repeat:repeat;
  padding-top: 35rpx;
  opacity:1;
  /*
  position: fixed;
  top:0;
  z-index:99;
  */
  
}

.banner image {
	width: 100%;
	height: 200rpx;
}

.banner .slogan{  
  border: solid 0px black;  
  display: flex;  
  flex-direction: row;  
  justify-content: center;  
  margin:5px;
}  
/*user info*/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items:center;
  height: 240rpx;
  background: #1d1d1d;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-top: 40rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}


/*order*/
.menu-area {
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: space-between;
  background: white;
  padding:0 20rpx;
  margin-bottom: 15rpx;
  margin-top: 15rpx;
}

/*menu list*/
.tableviewcell {
	width:100%;
  height: 100%;
  padding: 20rpx;
	color: #444;
	background: white;
	display: flex;
  flex-direction: row;
	align-items: center;
}
.linegray {
	border-bottom: 1rpx solid #eee;
}
/*icon*/
.tableviewcell image {
	width: 48rpx;
	height: 48rpx;
}

/*text*/
.tableviewcell text {
	font-size: 28rpx;
	margin-left: 20rpx;
}
.inlinetips {
  color: #999;
  font-size: 28rpx;
}

/*button*/
.logout {
	margin: 30rpx;
  border: 0;
  background: transparent;
  color: #E34C55;
  font-size: 24rpx;
}
.logout::after {
  border: 0;
}

/*order*/
.order-area {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: white;
  margin: 20rpx 0;
  padding: 20rpx 0;
}

.order {
	width: 33.3%;
	text-align: center;
}

.order image {
	width: 90rpx;
	height: 90rpx;
}

.order text{
	display: block;
	font-size: 30rpx;
	color: #333;
}
/** 修改button默认的点击态样式类**/
.button-hover {
  background-color: red;
}
/** 添加自定义button点击态样式类**/
.other-button-hover {
  background-color: blue;
}

.clickBtn{  
  font-size:28rpx;
  width: 100%;
  background-color:white;  
  color:#444;  
  overflow:hidden;  
  margin-left:-4rpx;
  border: 0;
  text-align: left;
  margin: 0;
}  
  
.clickBtn::after {
  border: 0;
} 


.shopping_container {
  display: flex;
  flex-direction: column;
  justify-content: center; /*子项横轴上居中对齐*/
  text-align: center;
  background: #fff;
  border-top: 1rpx solid #eee;
  padding: 10rpx 0 40rpx 0;
  margin-bottom: 10rpx;
  z-index: 1;
}

.shopping_container .img_tag {
  width: 10%;
  height: 30rpx;
  margin: 10px;
}

.shopping_container .goods-name {
  display: flex;
  flex-direction: column;
  align-content: center;
  width: 100%;
  font-size: 36rpx;
  font-weight: bold;
  color: #444;
}

.shopping_container .goods_prom {
  display: block;
  color: #999;
  font-size: 28rpx;
  font-weight: normal;
  white-space: nowrap;
  overflow-x: hidden;
}

.shopping_container .goods-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  font-size: 32rpx;
}
prd-detail {
  margin: 5rpx 0 15rpx 0;
  color: #999;
}
.prd-detail text {
  font-size: 28rpx;
}
.modalbox {
  background: #ffffff;
  margin-top: 10px;
}
.wxParse {
  line-height: 1.8;
  font-size: 24rpx;
  height: 600rpx;
  }
 
 
.picker_box{
  background: #fff;
  width: 100%;
  margin: 5rpx auto;
  position: relative;
}

.picker{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  font-size: 35rpx;
}
.picker .text{
   text-align: center;
  font-size: 35rpx;
  flex: 1;
}
.picker .img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}


.sentbtn {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: center;
  margin: 40rpx auto 20rpx auto;
  width: 100%;
  height: 150rpx;
}

.sentbtn button {
  line-height: 80rpx;
  width: 60%;
  height: 80rpx;

  background: #e34c55;
  color: white;
  font-size: 26rpx;
  border-radius: 20rpx;
  -webkit-box-shadow: 0px 4rpx 0px rgba(219, 31, 5, 1);
  -moz-box-shadow: 0px 4rpx 0px rgba(219, 31, 5, 1);
  box-shadow: 0px 4rpx 0px rgb(179, 22, 2);
  margin:20rpx;
}

.sentbtn text {
  font-size: 24rpx;
  color: #999;
}
